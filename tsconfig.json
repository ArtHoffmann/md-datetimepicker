{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "sourceMap": true,
    "inlineSources": true,
    "target": "es5",
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationDir":"../typings",
    "lib": [
      "es6",
      "dom"
    ]
  },
    "exclude": [
      "node_modules",
      "tests",
      "bundles",
      "dist",
      "demo-app",
      "typings",
      "src/**/*.spec.ts",
      "**/*.d.ts"
    ]
}
